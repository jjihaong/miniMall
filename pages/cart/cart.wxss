/* pages/cart/cart.wxss */
.flex{
  display: flex;
  display: -webkit-flex;
}
.selected-content{
  width: 100%;
  padding-bottom: 96rpx;
  position: relative;
}
.selected {
  width: 100%;
  background-color: rgba(238, 238, 238, 0.918);
  box-sizing: border-box;
  margin-bottom: 16rpx;
  padding: 0 8rpx;
}
.selected-prev{
  width: 204rpx;
  height: 204rpx;
  margin-right: 12rpx;
}
.selected-prev>image{
  width: 100%;
  height: 100%;
  object-fit: contain;
}
.selected-info{
  flex: 1;
  flex-direction: column;
  justify-content: space-between;
  padding: 16rpx;
}
.selected-detail{
  width: 100%;
  justify-content: space-between;
}
.selected-count{
  width: 100%;
  justify-content: space-between;
  align-items: center;
}
.selected-num{
  font-size: 32rpx;
}
.selected-footer{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 96rpx;
  align-items: center;
  justify-content: flex-end;
  font-size: 40rpx;
  color: #FFF;
  background-color: #AB956D;
  box-sizing: border-box;
  padding-right: 32rpx;
}
.selected-price{
  margin-right: 32rpx;
}
.selected-pay,.selected-pay navigator,.selected-pay image{
  width: 45rpx;
  height: 45rpx;
}